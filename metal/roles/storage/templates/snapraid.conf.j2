# SnapRAID configuration file
# Generated by Ansible

# Parity files locations
{% for device in parity_devices %}
{% set parity_num = loop.index %}
{% if loop.first %}
parity /mnt/parity{{ parity_num }}/snapraid.parity
{% else %}
{{ loop.index - 1 }}-parity /mnt/parity{{ parity_num }}/snapraid.{{ loop.index - 1 }}-parity
{% endif %}
{% endfor %}

# Content files locations (at least 3 copies recommended)
{% for dir in disk_directories[:3] %}
content {{ dir }}/snapraid.content
{% endfor %}
# Additional content file on root filesystem
content /var/snapraid.content

# Data disks
{% for dir in disk_directories %}
data d{{ loop.index }} {{ dir }}
{% endfor %}

# Excludes
exclude *.unrecoverable
exclude /tmp/
exclude /lost+found/
exclude downloads/
exclude appdata/
exclude *.!sync
exclude .AppleDouble
exclude ._AppleDouble
exclude .DS_Store
exclude ._.DS_Store
exclude .Thumbs.db
exclude .fseventsd
exclude .Spotlight-V100
exclude .TemporaryItems
exclude .Trashes
exclude .AppleDB

# Autosave
autosave 500

# Pool directory (mergerfs mount)
pool /mnt/storage
